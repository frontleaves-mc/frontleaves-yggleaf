# ============================================
# 应用基础配置 (Application Settings)
# ============================================

# 调试模式 (Debug Mode)
# 可选值: true, false, 1, 0, yes, no, on, off
XLF_DEBUG=true
# 监听地址 (Listen Address)
XLF_HOST=0.0.0.0
# 监听端口 (Listen Port)
XLF_PORT=5577

# ============================================
# 数据库配置 (Database Settings) [可选/Optional]
# ============================================

# 数据库主机地址 [必填]
DATABASE_HOST=localhost
# 数据库端口
DATABASE_PORT=5432
# 数据库用户名 [必填]
DATABASE_USER=frontleaves-yggleaf
# 数据库密码 [必填]
DATABASE_PASS=frontleaves-yggleaf
# 数据库名称 [必填]
DATABASE_NAME=frontleaves-yggleaf
# 数据库表前缀
DATABASE_PREFIX=fyl_

# ============================================
# Redis 配置 (Redis Settings) [可选/Optional]
# ============================================

# Redis 主机地址
NOSQL_HOST=localhost
# Redis 端口
NOSQL_PORT=6379
# Redis 用户名 (ACL 模式)
NOSQL_USER=
# Redis 密码
NOSQL_PASS=
# Redis 数据库编号 (0-15)
NOSQL_DATABASE=1
# Redis 键前缀
NOSQL_PREFIX=fyl:
# Redis 连接池
REDIS_POOL_SIZE=100